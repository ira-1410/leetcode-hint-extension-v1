{
  "manifest_version": 3,
  "name": "LeetCode Hints",
  "version": "1.0",
  "description": "Shows conceptual hints for LeetCode problems to help students without giving away solutions.",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["http://127.0.0.1:3100/*"],
  "action": { "default_popup": "popup/popup.html" },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content.js"]
    }
  ],
  "background": { "service_worker": "background.js"}
}
